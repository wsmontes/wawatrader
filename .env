# ===================================
# Trading Configuration
# ===================================
# Risk Management
MAX_POSITION_SIZE=0.10  # 10% of portfolio per position
MAX_DAILY_LOSS=0.02     # 2% max daily loss
MAX_PORTFOLIO_RISK=1.50 # 150% max leverage (1.0 = fully invested, >1.0 = using margin)

# Signal Weighting
TECHNICAL_WEIGHT=0.70   # 70% weight to technical indicators
SENTIMENT_WEIGHT=0.30   # 30% weight to LLM sentiment

# Trading Parameters
MIN_CONFIDENCE=60       # Minimum confidence score to trade (0-100)
DEFAULT_TRADE_SIZE=1    # Default number of shares per trade

# ===================================
# System Configuration
# ===================================
# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/wawatrader.log

# Data Caching
CACHE_ENABLED=true
CACHE_TTL=300  # 5 minutes

# Market Hours (US Eastern Time)
